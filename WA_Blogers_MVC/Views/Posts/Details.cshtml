@model WA_Blogers_MVC.Models.WA_Posts

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/Admin/Layout.cshtml";

}

<h2>@Model.Title</h2>

<div>
    
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContentPost)
        </dt>

        <dd>
            @Html.Raw(new HtmlString(Model.ContentPost))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Picture)
        </dt>

        @*<dd>
            @Html.DisplayFor(model => model.Picture)
        </dd>*@
        <dd>
            <img src="@Url.Content(Model.Picture)" width="100" height="100" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UseDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UseDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WA_Users.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WA_Users.UserName)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.RouteUrl("EditPost", new { id = Model.PostID, title = UrlEncode.ToFriendlyUrl(Model.Title) })">Sửa bài viết</a> |
    @Html.ActionLink("Quay lại", "Index")
</p>
