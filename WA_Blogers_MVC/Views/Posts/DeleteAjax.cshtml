@model WA_Blogers_MVC.Models.WA_Posts

@{
    Layout = null;
}
@Styles.Render("~/Content/bootstrap-toggle.min.css")
@Scripts.Render("~/Scripts/bootstrap-toggle.min.js")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title text-red"><b>Bạn có chắc chắn muốn xóa không?</b></h4>
</div>
<div class="modal-body">
    <table class="table table-striped">

        <tr>
            <td>@Html.LabelFor(model => model.Title)</td>
            <td>@Html.DisplayFor(n => n.Title)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Description)</td>
            <td>@Html.DisplayFor(n => n.Description)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.ContentPost)</td>
            <td>@Html.Raw(new HtmlString(Model.ContentPost))</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Created)</td>
            <td>@Html.DisplayFor(n => n.Created)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Picture)</td>
            <td><img src="@Url.Content(Model.Picture)" width="100" height="100" /></td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.UseDescription)</td>
            <td>@Html.DisplayFor(n => n.UseDescription)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Active)</td>
            <td>@Html.DisplayFor(n => n.Active)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.WA_Users.UserName)</td>
            <td>@Html.DisplayFor(n => n.WA_Users.UserName)</td>
        </tr>
    </table>
</div>
<div class="modal-footer">
    @using (Html.BeginForm("Delete", "Posts", new { id = Model.PostID}, FormMethod.Post))
    {
         <button type="submit" class="btn btn-warning" >Xóa</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>

    }
   
</div>
