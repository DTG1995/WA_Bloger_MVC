@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Details", "Users")
        </li>
        <li>
            @Html.RouteLink("Đăng xuất", "Logout")
            @*<a href="javascript:document.getElementById('logoutForm').submit()">Đăng Xuất</a>*@
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.RouteLink("Đăng ký","Singup")</li>*@
        <li>@Html.RouteLink("Đăng nhập","Login")</li>
    </ul>
}
