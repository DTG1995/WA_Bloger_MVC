@using WA_Blogers_MVC.Models;
@{
    var db = new WA_BlogerEntities();
}
<!DOCTYPE html>
<html>

<head>

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <!-- Font Awesome Icons -->
    @Styles.Render("~/Content/font-awesome.min.css")
    @* Bundles assume jquery 2.1.3 and Bootstrap 3 *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/test/style.css")
    @* @Scripts.Render("~/Scripts/test/script.js")*@
    <script>
        $(function () {
            $('.navigation-button').click(function () {
                $('.navigation .widget-content').slideToggle();
                $(this).toggleClass('active');
            });
            $('.dropdown-button').click(function () {
                $('.dropdown .widget-content').slideToggle();
                $(this).toggleClass('active');
            });
        });
    </script>
</head>

<body class="index">
    <div class="inner" id="outer-wrapper">
        @Html.Partial("TopHeader")
        @* Body *@

        @RenderBody()
        
    </div>
</body>

</html>
