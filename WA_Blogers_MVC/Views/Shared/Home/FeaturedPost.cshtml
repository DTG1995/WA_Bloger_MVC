                                            <div class="tl-topost-item">
                                                <a class="featured-thumb" title="@post.Title" href="@Url.RouteUrl("ViewPost", new {id = post.PostID, title = UrlEncode.ToFriendlyUrl(post.Title)})">
                                                    <img src="@Url.Content(img)">
                                                </a>
                                                <div class="top-right-content">
                                                    <a class="tl-topost-item-link" title="@post.Title" href="@Url.RouteUrl("ViewPost", new {id = post.PostID, title = UrlEncode.ToFriendlyUrl(post.Title)})">
                                                        <h3>@post.Title</h3>
                                                    </a>
                                                    <div class="top-right-meta">
                                                        <span class="authorname"><i class="fa fa-user"></i> @(post.WA_Users == null ? "Người nặc danh" : post.WA_Users.UserName)</span> 
                                                        <span class="recentdate"><i class="fa fa-calendar"></i> @dateCreated.ToString("dd-MM-yyyy")</span> 
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
