@using WA_Blogers_MVC.Models;
@using WebGrease.Css.Extensions
@model List<WA_Blogs>
@helper RenderHtmlBlog(WA_Blogs wa_Blog, int? level)
{
    string strClass = "submenu";
    if (level > 0)
    {
        strClass = "submenu2";
    }
    <li class="@(wa_Blog.WA_Blogs1.Count>0?strClass:null)">
        <a href="@Url.RouteUrl("ViewPostsInBlogs",new { id = wa_Blog.BlogID, title = UrlEncode.ToFriendlyUrl(wa_Blog.Name) })" itemprop="url"><span itemprop="name"> @wa_Blog.Name</span></a>
        <ul>
            @foreach (var item in wa_Blog.WA_Blogs1)
            {
                @RenderHtmlBlog(@item, @level+1);
            }
        </ul>
    </li>
}
    <ul class="leftmenus">
        <li class="homelink"><a href="/"><i class="fa fahome fa-home"></i></a></li>
        @foreach (var item in Model)
        {
            @RenderHtmlBlog(@item,0);
        }
        <!-- Hot News Right Menu Start -->
        @{
            var title = db.WA_Options.FirstOrDefault(x => x.Group.Equals("NewsHot") && x.Name.Equals("Title"));
            string display = "";
            if (title == null)
            {
                display = "none";
            }
            var strblogsID = db.WA_Options.FirstOrDefault(x => x.Group.Equals("NewsHot") && x.Name.Equals("Blogs"));
            
        }
        <li class="submenu choose-cat " style="display: @display">
            
            <a href="#" itemprop="url"><span itemprop="name" id="hotNewsTitle">@title.Value</span></a>
            <ul>
                @{
                    if (strblogsID != null)
                    {
                        string[] arrstrblogsID = strblogsID.Value.Split(';');
                        List<WA_Blogs> listBlogs = new List<WA_Blogs>();
                        for (int i = 0; i < arrstrblogsID.Length; i++)
                        {
                            int id = int.Parse(arrstrblogsID[i]);
                            listBlogs.Add(db.WA_Blogs.Find(id));
                        }
                        foreach (var item in listBlogs)
                        {
                            <li><a href="@Url.RouteUrl("ViewPostsInBlogs", new {id = item.BlogID, title = UrlEncode.ToFriendlyUrl(item.Name)})" itemprop="url"><span itemprop="name">@item.Name</span></a></li>
                        }
                    }
                }
                
            </ul>
        </li>
        <!-- Hot News Right Menu End -->

    </ul>
